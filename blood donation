function DonorForm() {
    try {
        const [formData, setFormData] = React.useState({
            name: '',
            bloodType: '',
            phone: '',
            location: '',
            lastDonation: '',
            available: true
        });
        const [loading, setLoading] = React.useState(false);

        const handleSubmit = async (e) => {
            e.preventDefault();
            setLoading(true);
            try {
                await createDonor(formData);
                setFormData({
                    name: '',
                    bloodType: '',
                    phone: '',
                    location: '',
                    lastDonation: '',
                    available: true
                });
                alert('Thank you for registering as a donor!');
            } catch (error) {
                console.error('Error submitting donor form:', error);
                alert('Failed to register. Please try again.');
            } finally {
                setLoading(false);
            }
        };




        return (
            <div data-name="donor-form" id="donate" className="max-w-2xl mx-auto p-6 bg-white rounded-lg shadow-lg my-8">
                <h2 className="text-2xl font-bold mb-6">Register as Blood Donor</h2>
                <form onSubmit={handleSubmit}>
                    <div className="space-y-4">
                        <div>
                            <label className="block text-gray-700 mb-2">Full Name</label>
                            <input
                                type="text"
                                value={formData.name}
                                onChange={(e) => setFormData({...formData, name: e.target.value})}
                                className="w-full p-2 border rounded"
                                required
                            />
                        </div>
                        <div>
                            <label className="block text-gray-700 mb-2">Blood Type</label>
                            <select
                                value={formData.bloodType}
                                onChange={(e) => setFormData({...formData, bloodType: e.target.value})}
                                className="w-full p-2 border rounded"
                                required
                            >
                                <option value="">Select Blood Type</option>
                                <option value="A+">A+</option>
                                <option value="A-">A-</option>
                                <option value="B+">B+</option>
                                <option value="B-">B-</option>
                                <option value="AB+">AB+</option>
                                <option value="AB-">AB-</option>
                                <option value="O+">O+</option>
                                <option value="O-">O-</option>
                            </select>
                        </div>
                        <div>
                            <label className="block text-gray-700 mb-2">Phone Number</label>
                            <input
                                type="tel"
                                value={formData.phone}
                                onChange={(e) => setFormData({...formData, phone: e.target.value})}
                                className="w-full p-2 border rounded"
                                required
                            />
                        </div>
                        <div>
                            <label className="block text-gray-700 mb-2">Location</label>
                            <input
                                type="text"
                                value={formData.location}
                                onChange={(e) => setFormData({...formData, location: e.target.value})}
                                className="w-full p-2 border rounded"
                                required
                            />
                        </div>
                        <div>
                            <label className="block text-gray-700 mb-2">Last Donation Date</label>
                            <input
                                type="date"
                                value={formData.lastDonation}
                                onChange={(e) => setFormData({...formData, lastDonation: e.target.value})}
                                className="w-full p-2 border rounded"
                            />
                        </div>
                        <button
                            type="submit"
                            disabled={loading}
                            className="w-full bg-red-500 text-white py-2 rounded hover:bg-red-600 disabled:bg-red-300"
                        >
                            {loading ? 'Registering...' : 'Register as Donor'}
                        </button>
                    </div>
                </form>
            </div>
        );
    } catch (error) {
        console.error('DonorForm error:', error);
        reportError(error);
        return null;
    }
}

